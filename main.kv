BoxLayout:
    orientation: "vertical"

    Label:
        text: "Enter your name:"

    TextInput:
        id: user_input
        multiline: False

    Button: 
        text: "Greet"
        hint_text: "Your name here" 
        on_press: output_label.text = "Hello, " + user_input.text

    Label:
        id: output_label
        text: "Welcome"
    
    CheckBox:
        id: CheckBox
        active: True
    
    Label: 
        text: "Check me"
    
    Slider:
        min: 0
        max: 100
        value: 50
    
    Switch:
        id: Switch
    
    Label: 
        text: "Toggle me"
    
    ProgressBar:
        max: 100
        value: 75
    
